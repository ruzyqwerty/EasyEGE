@model EasyEGE.ViewModels.HomePageViewModel

@{
    ViewBag.Title = "Главная страница";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать!</h1>
    <h6 class="display-4">Выбери предмет для подготовки к ЕГЭ!</h6>
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <a class="themeBtn" asp-controller="Subject" asp-action="Index" asp-route-subjectId="@Model.MathId">Математика</a>
            </div>
            <div class="form-group">
                <a class="themeBtn2" asp-controller="Subject" asp-action="Index" asp-route-subjectId="@Model.RussianId">Русский язык</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <a class="themeBtn3" asp-controller="Subject" asp-action="Index" asp-route-subjectId="@Model.ComputerScienceId">Информатика</a>
            </div>
            <div class="form-group">
                <a class="themeBtn4" asp-controller="Subject" asp-action="Index" asp-route-subjectId="@Model.PhysicsId">Физика</a>
            </div>
        </div>
    </div>
</div>
