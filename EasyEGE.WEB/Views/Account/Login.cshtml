@model EasyEGE.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Вход на сайт";
    ViewBag.Name = "Аноним";
}

<div class="text-center">
    <div class="container register-form">
        <div class="note">Вход на сайт</div>
        <form class="form-content" method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div>
                <div class="form-group">
                    <label asp-for="Email">Введите Email</label>
                    @if (Model != null)
                    {
                        <input class="form-control" type="text" asp-for="Email" value="@Model.Email" />
                    }
                    else
                    {
                        <input class="form-control" type="text" asp-for="Email" />
                    }
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password">Введите пароль</label>
                    <input class="form-control" asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" asp-for="RememberMe">Запомнить меня</label>
                </div>
                <div class="form-group">
                    <input class="btnSubmit" type="submit" value="Войти" />
                </div>
            </div>
        </form>
    </div>
</div>