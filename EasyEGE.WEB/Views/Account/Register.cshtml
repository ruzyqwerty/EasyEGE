@using Microsoft.AspNetCore.Identity
@model EasyEGE.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "Регистрация";
}

<div class="text-center">
    <div class="container register-form">
        <div class="note">Регистрация</div>
        <form method="post" class="form-content" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name">Введите ваше имя</label><br />
                        <input class="form-control" type="text" asp-for="Name" />
                        <span asp-validation-for="Name"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">Введите Email</label><br />
                        <input class="form-control" type="text" asp-for="Email" />
                        <span asp-validation-for="Email"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Password">Введите пароль</label><br />
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordConfirm">Введите пароль для подтверждения</label><br />
                        <input class="form-control" asp-for="PasswordConfirm" />
                        <span asp-validation-for="PasswordConfirm"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Выберите роль</label>
                <select name="chooserole" class="form-control">
                    @foreach (IdentityRole role in Model.AllRoles)
                    {
                        <option value="@role.Name">@role.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <span asp-validation-for="Error"></span>
            </div>
            <div>
                <button type="submit" class="btnSubmit">Регистрация</button>
            </div>
        </form>
    </div>
</div>